<h1>New Application</h1>
<%= form_with url: "/applications/new", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.number_field :zip, max: 99999 %>

  <%= f.label :description %>
  <%= f.text_field :description %>

<fieldset disabled>
  <%= f.label :application_status %>
  <%= f.text_field :application_status, value: 'In Progress' %>
</fieldset>

  <%= f.submit %>
<% end %>
