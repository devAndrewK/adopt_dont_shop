<h1>New Application</h1>
<%= form_with url: "/applications/new", method: :post, local: true do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :street %>
  <%= f.text_field :street %></p>

  <p><%= f.label :city %>
  <%= f.text_field :city %></p>

  <p><%= f.label :state %>
  <%= f.text_field :state %></p>

  <p><%= f.label :zip %>
  <%= f.number_field :zip, max: 99999 %></p>

  <p><%= f.label :description %>
  <%= f.text_area :description %></p>

<fieldset hidden>
  <%= f.label :application_status %>
  <%= f.text_field :application_status, value: 'In Progress' %>
</fieldset>

  <%= f.submit %>
<% end %>
